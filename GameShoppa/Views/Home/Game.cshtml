@model GameShoppa.Models.Game

@{
    ViewData["Title"] = "Game";
}

<div class="container">
    <div class="row">
        <div class="col-lg-3">
            <h2 class="my-4">Genres</h2>
            <div class="list-group">


            </div>
        </div>
        <!-- /.col-lg-3 -->
        <div class="col-lg-9">

            <div class="card mt-4">
                <img class="card-img-top img-fluid" src="http://placehold.it/900x400" alt="">
                <div class="card-body">
                    <h3 class="card-title">@Model.Title</h3>
                    <h4>$@Model.Price</h4>
                    <p class="card-text">@Model.Description</p>
                </div>
            </div>

        </div>
        <!-- /.col-lg-9 -->
    </div>
</div>
<!-- /.container -->